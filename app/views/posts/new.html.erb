<div class="container">
  <div class="row">
    <h1> Add a new post to the timeline: </h1>
  </div>
  <div class="row">
    <%= form_for @post do |form| %>
    <%= form.label :message %>
    <%= form.text_area :message %>

    <%= form.submit "Submit" %>
    <% end %>
  </div>
  <div class="row">
    <%= link_to 'Back to timeline', root_url %>
  </div>
</div>
