<h2>Image comments</h2>

<%= render "image_comments/form" %>

<% find_image_comments(@image_post).reverse.each do |comment| %>
<div class='image_comment'>
  Commented <%= time_ago_in_words(comment.created_at || Time.now) %> ago by <%= link_to(find_comment_username(comment), root_url + find_comment_username(comment)) %>.
  <p><%= comment.comment %></p>
  <hr>
</div>
<% end %>
